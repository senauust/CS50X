#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int i = get_int("Height:");
   while (i<1 || i>8)
   {
       i = get_int("Height:");
   }
       for (int a = 1; a <= i; a++)
        {
            for (int j = 1; j <= i - a; j++)
            {
                printf(" ");
            }
            for (int k = 1; k <= a; k++)
            {
                printf("#");
            }
            printf("\n");
             
        }
       
}
